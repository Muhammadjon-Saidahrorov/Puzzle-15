<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="#9E000000"/>
            <stroke android:color="#2196F3" android:width="2dp"/>
            <padding android:left="2dp" android:top="2dp" android:right="3dp" android:bottom="2dp"/>
        </shape>
    </item>

    <item>
        <shape android:shape="oval">
            <solid android:color="#9E000000" />
            <stroke android:width="1dp" android:color="#2196F3" />
            <padding android:bottom="2dp" android:left="2dp" android:right="1dp" android:top="2dp" />
        </shape>
    </item>
</selector>